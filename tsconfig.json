{
  "compilerOptions": {
    "outDir": "dist",
    "sourceRoot": "src",
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  }
}
