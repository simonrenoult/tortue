{
  "name": "tortue",
  "version": "0.0.1",
  "description": "A personal ecological companion",
  "author": {
    "email": "contact@simonrenoult.me",
    "name": "Simon Renoult",
    "url": "https://github.com/simonrenoult"
  },
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "20.3.1",
    "npm": "9.6.7"
  },
  "scripts": {
    "build": "nest build && npm run sentry:sourcemaps",
    "lint:code": "eslint src test",
    "lint:commit": "commitlint --edit",
    "prestart": "npm run build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "test": "node --require 'ts-node/register' test/**/*.test.ts",
    "prepare": "husky install",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org octo-technology-at --project tortue ./dist && sentry-cli sourcemaps upload --org octo-technology-at --project tortue ./dist"
  },
  "dependencies": {
    "@nestjs/cli": "10.1.10",
    "@nestjs/common": "10.1.0",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.1.0",
    "@nestjs/platform-express": "10.1.0",
    "@sentry/node": "7.61.0",
    "express-handlebars": "7.1.0",
    "nestjs-cls": "3.5.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "ulid": "2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.1.0",
    "@types/express": "4.17.17",
    "@types/node": "20.4.4",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "prettier": "3.0.0",
    "source-map-support": "0.5.21",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  }
}
